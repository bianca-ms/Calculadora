<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="16dp"
    tools:ignore="MissingDefaultResource">

    <!-- TextView para mostrar la expresión ingresada -->
    <TextView
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BCBED9"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- TextView para mostrar el resultado -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01021A"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:padding="10dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <!-- GridLayout para los botones -->
    <GridLayout
        android:id="@+id/calculator_layout_land"
        android:layout_width="877dp"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        android:columnCount="6"
        android:orientation="horizontal"
        android:padding="10dp"
        android:rowCount="5">

        <Button
            android:id="@+id/buttonClearLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#6C74E7"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonExponentLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#6C74E7"
            android:text="e"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <Button
        android:id="@+id/buttonDelete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:backgroundTint="#6C74E7"
        android:text="⌫"
        android:textColor="#F7F8F8"
        android:textSize="25sp"
        tools:ignore="HardcodedText"/>



        <Button
            android:id="@+id/btnDivideLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="/"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/buttonCosLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="cos"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonLogLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="log"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn7Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="7"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn8Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="8"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn9Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="9"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnMultiplyLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="*"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/buttonSinLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="sin"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonRadLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="Rad"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn4Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="4"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn5Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="5"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn6Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="6"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnPlusLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="+"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonSquareLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="x²"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonTanLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="tan"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/btn1Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="1"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn2Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="2"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn3Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="3"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnMinusLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="-"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/buttonSquareRootLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="√"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonPiLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="π"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnParenthesisLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="( )"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn0Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="0"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnDotLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="."
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonEqualsLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#6C74E7"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCubeRootLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="∛"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btnPercentLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#A8A0E2"
            android:text="%"
            android:textColor="#F7F8F8"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

    </GridLayout>
</LinearLayout>
